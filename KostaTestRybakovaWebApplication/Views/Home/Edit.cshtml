@model EditDepartmentViewModel

<form method="post" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="All"></div>
    <div><h3>Редактировать отдел</h3></div>
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="parentDepartmentID" value="@Model.ParentDepartmentID" />
    <div>
        <label asp-for="Name">Название*</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" />
    </div><br />
    <div>
        <label asp-for="Code">Код*</label>
        <input asp-for="Code" />
        <span asp-validation-for="Code" />
    </div><br />
    <button type="submit" asp-area="" asp-controller="home" asp-action="edit">Сохранить</button>
</form>