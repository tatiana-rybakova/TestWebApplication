@model AddDepartmentViewModel


<form method="post" enctype="multipart/form-data">
         <div class="validation" asp-validation-summary="All"></div>
        <h3>Добавление нового отдела</h3>
        <input type="hidden" name="ParentDepartmentID" value="@Model.ParentDepartmentID" />
    <div>
            <label asp-for="Name">Название*</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" />
        </div><br />
    <div>
            <label asp-for="Code">Код*</label>
            <input asp-for="Code" />
            <span asp-validation-for="Code" />
        </div><br />
    <button  type="submit" asp-area="" asp-controller="home" asp-action="add">Добавить</button>
    </form>


